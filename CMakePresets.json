{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-arm64",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "arm64",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/overlay-ports-vcpkg",
        "VCPKG_TARGET_TRIPLET": "arm64-windows",
        "VCPKG_INSTALL_OPTIONS": "--allow-unsupported",
        "ENABLE_SERVICES": "OFF"
      }
    },
    {
      "name": "cli-vscode-arm64",
      "inherits": "base-arm64"
    }
  ],
  "buildPresets": [
    {
      "name": "cli-vscode-arm64-debug",
      "configurePreset": "cli-vscode-arm64",
      "configuration": "Debug"
    },
    {
      "name": "cli-vscode-arm64-relwithdebinfo",
      "configurePreset": "cli-vscode-arm64",
      "configuration": "RelWithDebInfo"
    }
  ]
}
